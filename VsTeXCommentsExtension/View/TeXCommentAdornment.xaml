<UserControl x:Class="VsTeXCommentsExtension.View.TeXCommentAdornment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VsTeXCommentsExtension.View"
             x:ClassModifier="internal"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <StackPanel x:Name="leftBorderGroupPanel" Orientation="Horizontal">
            <StackPanel x:Name="leftBorderPanel1" Width="1" Margin="0,0,2,0"/>
            <StackPanel x:Name="leftBorderPanel2" Width="1" Margin="0,0,4,0"/>
        </StackPanel>

        <Image x:Name="imageControl" Margin="0,2,0,0"/>
        <ProgressBar x:Name="progressBar" IsIndeterminate="True" Height="8" Width="128" />

        <Button x:Name="btnEdit" Click="ButtonEdit_Click" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="12,0,0,0" >
            <Image Source="../Resources/Edit.png" Width="12" Height="12" />
        </Button>

        <Button x:Name="btnShow" Click="ButtonShow_Click" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="12,0,0,0" >
            <Image Source="../Resources/Show.png" Width="12" Height="12"/>
        </Button>
    </StackPanel>
</UserControl>
