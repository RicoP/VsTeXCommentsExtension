<UserControl x:Class="VsTeXCommentsExtension.View.DropDownImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VsTeXCommentsExtension.View"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="200">
    <StackPanel Orientation="Horizontal">
        <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Click="MainButton_Click" >
            <Image Source="{Binding ImageSource, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:DropDownImageButton}}}" Width="12" Height="12" RenderOptions.BitmapScalingMode="HighQuality"/>
        </Button>
        <Button x:Name="arrowButton"
                BorderThickness="0"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                Click="ArrowButton_Click" 
                ContextMenuService.IsEnabled="False" 
                ContextMenu="{Binding ContextMenu, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:DropDownImageButton}}}">
            <Button.Content>
                <Image Source="{Binding ResourcesManager.DropDown, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:DropDownImageButton}}}" Width="6" Height="12" />
            </Button.Content>
        </Button>
    </StackPanel>
</UserControl>
